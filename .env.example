# RevuIQ Environment Variables

# Database
DATABASE_URL=postgresql://revuiq:revuiq_password@localhost:5432/revuiq_db
# For SQLite (development): DATABASE_URL=sqlite:///./revuiq.db

# Platform API Keys
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
YELP_API_KEY=your_yelp_api_key_here
META_ACCESS_TOKEN=your_meta_access_token_here
TRIPADVISOR_API_KEY=your_tripadvisor_api_key_here

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_key_here

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Deployment
ENVIRONMENT=development  # development, staging, production
